super + shift + Return
	st

super + space
	dmenu_run

ctrl + alt + Delete
	lockmenu

super + shift + space
	vifmopen

ctrl + shift + Escape
	dmenu_kill

Print
	sshot --focused

super + {k,j}
	bsp_focus_node_or_monitor {prev,next}

# close node
super + shift + BackSpace
	bspc node --close

# coarsely resize node
super + {h,l}
	bspc node @/1 --resize right {-10,10} 0

# finely resize node
super + shift + {h,l}
	bspc node @/1 --resize right {-1,1} 0

# swap node with master
super + Return
	bspc node --swap @/1

super + slash
	bspc node --state \~fullscreen

button8
	bspc node --state \~floating

button9
	bspc node --state \~tiled

# focus desktop
super + {y,u,i,o,p}
	bspc desktop --focus focused:^{1,2,3,4,5}

# focus desktop
super + shift + {y,u,i,o,p}
	bspc node --to-desktop focused:^{1,2,3,4,5} --follow
