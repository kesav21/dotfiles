# open terminal
super + shift + Return
	st

# launch applications
super + space
	dmenu_run

# open lock menu
ctrl + alt + Delete
	lockmenu

# kill processes
ctrl + shift + Escape
	dmenu_kill

# screenshot focused node
Print
	sshot --focused

# move across nodes or monitors
super + {k,j}
	bsp_focus_node_or_monitor {prev,next}

# close node
super + shift + BackSpace
	bspc node --close

# coarsely resize node
super + {h,l}
	bspc node @/1 --resize right {-10,10} 0

# finely resize node
super + shift + {h,l}
	bspc node @/1 --resize right {-1,1} 0

# swap node with master
super + Return
	bspc node --swap @/1

# fullscreen focused node
super + slash
	bspc node --state \~fullscreen

# float focused node
button8
	bspc node --state \~floating

# tile focused node
button9
	bspc node --state \~tiled

# focus desktop
super + {y,u,i,o,p}
	bspc desktop --focus focused:^{1,2,3,4,5}

# move node to desktop
super + shift + {y,u,i,o,p}
	bspc node --to-desktop focused:^{1,2,3,4,5} --follow
