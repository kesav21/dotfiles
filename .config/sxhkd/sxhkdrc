
super + shift + Return
	st

super + p
	dmenu_run

ctrl + alt + Delete
	lockmenu

super + o
	vifmopen

ctrl + shift + Escape
	fzfkill

Print
	sshot -u

super + {k,j}
	bspc node -f "$(bsp_focus_node {prev,next})"

# close node
super + shift + BackSpace
	bspc node --close

# coarsely resize node
super + {h,l}
	bspc node @/1 --resize right {-10,10} 0
	# bspc node --resize right {-10,10} 0

# finely resize node
super + shift + {h,l}
	bspc node @/1 --resize right {-1,1} 0

# swap node with master
super + Return
	bspc node --swap @/1

super + slash
	bspc node --state '~'fullscreen

button8
	bspc node --state '~'floating

button9
	bspc node --state '~'tiled

# focus desktop
# alt + {1,2,3,4,5}
# 	bspc node -f next.local.floating; bspc desktop -f {1,2,3,4,5}

# focus desktop
# super + {6,7,8,9,0}
# 	bspc node -f next.local.floating; bspc desktop -f {6,7,8,9,0}

# send node to desktop
# alt + shift + {1,2,3,4,5}
# 	bspc node -f next.local.floating; bspc node -d {1,2,3,4,5} --follow

# send node to desktop
# super + shift + {6,7,8,9,0}
# 	bspc node -f next.local.floating; bspc node -d {6,7,8,9,0} --follow

# toggle desktop layout
# super + m
# 	bspc desktop -l prev

# focus monitor
super + {comma,period}
	bspc monitor --focus {west,east}

# send node to monitor
super + shift + {comma, period}
	bspc node --to-monitor {west, east} --follow

# focus occupied desktop
super + {n,m}
	bspc desktop --focus "$(bsp_local_occupied_desktop {prev,next})"
	# eval "$(bsp_local_occupied_desktop {prev,next})"

# send to occupied desktop
super + shift + {n,m}
	bspc node --to-desktop "$(bsp_local_occupied_desktop {prev,next})" --follow

# focus desktop
super + {u,i}
	bspc desktop --focus "$(bsp_local_desktop {prev,next})"
	# bsp_local_desktop {prev,next}
	# eval "$(bsp_local_desktop {prev,next})"

# send to desktop
super + shift + {u,i}
	bspc node --to-desktop "$(bsp_local_desktop {prev,next})" --follow

