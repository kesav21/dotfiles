
[colors]

red = ${xrdb:URxvt.color1:#222}
green = ${xrdb:URxvt.color2:#222}
yellow = ${xrdb:URxvt.color3:#222}
blue = ${xrdb:URxvt.color4:#222}
purple = ${xrdb:URxvt.color5:#222}
cyan = ${xrdb:URxvt.color6:#222}

background = ${xrdb:URxvt.background:#222}
foreground = ${xrdb:URxvt.foreground:#222}

primary = ${self.cyan}
secondary = ${self.blue}
alert = ${self.red}

[bar/example]

width = 100%
height = 25

fixed-center = true

background = #00000000
;background = ${colors.background}
foreground = ${colors.green}

border-size = 10
border-color = #00000000

line-size = 3
line-color = ${colors.background}

padding-left = 1
padding-right = 1

module-margin-left = 1
module-margin-right = 0

font-0 = "FiraMono-Regular:size=10;1"
font-1 = "Font Awesome 5 Free:style=Solid:pixelsize=12;3"
font-2 = "Font Awesome 5 Free:style=Regular:pixelsize=12;3"
font-3 = "Font Awesome 5 Brands:pixelsize=12;3"

modules-left = temperature memory cpu eth wlan
modules-center = i3
modules-right =  powermenu pulseaudio brightness battery date

wm-restack = i3

; scrolling feature
enable-scroll = false
;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

;;;;;;;;;;;;;;;;;;;
;;; left tray   ;;;
;;;;;;;;;;;;;;;;;;;

[module/temperature]

type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = "TEMP <label>"

format-warn = "TEMP <label-warn>"
format-warn-foreground = ${colors.foreground}
format-warn-background = ${colors.alert}
format-warn-underline = ${self.format-warn-background}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.secondary}

[module/memory]

type = internal/memory
interval = 2
format-prefix = "RAM "
label = %percentage_used%%

[module/cpu]

type = internal/cpu
interval = 2
format-prefix = "CPU "
label = %percentage:2%%

[module/eth]

type = internal/network
interface = enp1s0
interval = 3.0

format-connected-prefix = "ETH "
format-connected-background = ${colors.background}
format-connected-underline = ${self.format-connected-background}

label-connected = %local_ip%

[module/wlan]

type = internal/network
interface = wlp2s0
interval = 3.0

format-connected = " <label-connected>"
format-connected-background = ${colors.background}
format-connected-underline = ${self.format-connected-background}

label-connected = %essid% %downspeed% %upspeed%

; do more research into this
ramp-signal-0 = a
ramp-signal-1 = b
ramp-signal-2 = c
ramp-signal-3 = d
ramp-signal-4 = e

;;;;;;;;;;;;;;;;;;;;
;;;;; middle   ;;;;;
;;;;;;;;;;;;;;;;;;;;

[module/i3]

type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

format-padding = 0

ws-icon-0 = "1;"
ws-icon-1 = "2;"
ws-icon-2 = "3;"
ws-icon-3 = "4;"
ws-icon-4 = "5;"
ws-icon-5 = "6;"
ws-icon-6 = "7;"
ws-icon-7 = "8;"
ws-icon-8 = "9;"
ws-icon-9 = "10;"

label-mode-background = ${colors.background}
label-mode-foreground = ${colors.foreground}
label-mode-padding = 0

; focused = Active workspace on focused monitor
label-focused = %index% %icon%
label-focused-background = ${colors.background}
label-focused-underline = ${colors.background}
label-focused-foreground = ${colors.blue}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %index% %icon%
label-unfocused-background = ${colors.background}
label-unfocused-foreground = ${colors.green}
label-unfocused-padding = 1

; visible = Active workspace on unfocused monitor
label-visible = %index% %icon%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index% %icon%
label-urgent-background = ${colors.background}
label-urgent-underline = ${self.label-urgent-background}
label-urgent-foreground = ${colors.red}
label-urgent-padding = 1

; Only show workspaces on the same output as the bar
pin-workspaces = true

;;;;;;;;;;;;;;;;;;;;
;;; right tray   ;;;
;;;;;;;;;;;;;;;;;;;;

[module/powermenu]
type = custom/menu

expand-right = false

format-spacing = 1

label-open = ""
label-close = ""
label-separator = "|"

menu-0-0 = "restart"
menu-0-0-exec = "sudo /sbin/shutdown -r now"
menu-0-1 = "shutdown"
menu-0-1-exec = "sudo /sbin/shutdown -h now"
menu-0-2 = "logout"
menu-0-2-exec = "i3-msg exit"

[module/pulseaudio]
type = internal/pulseaudio
format-volume = "<label-volume>"
label-volume = " %percentage%%"
label-muted = " %percentage%%"

[module/brightness]
type = custom/script

format =  <label>
label = %output%

exec = ~/.scripts/getbright
tail = true
interval = 1

[module/battery]

type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-full-prefix = " "
format-full-prefix-foreground = ${colors.blue}
format-full-background = ${colors.background}
format-full-underline = ${self.format-full-background}

format-charging = " <label-charging>"
format-charging-foreground = ${colors.blue}
format-charging-background = ${colors.background}
format-charging-underline = ${self.format-charging-background}

format-discharging = " <label-discharging>"
format-discharging-foreground = ${colors.green}
format-discharging-background = ${colors.background}
format-discharging-underline = ${self.format-discharging-background}

[module/date]

type = internal/date
interval = 5

format-prefix = " "
label = %date% %time%

date = "%a"
date-alt = " %m/%d/%Y"

time = "%I:%M %P"
time-alt = "%H:%M:%S"

;;;;;;;;;;;;;;;;;;;
;;;; general   ;;;;
;;;;;;;;;;;;;;;;;;;

[settings]
screenchange-reload = true

format-background = ${colors.background}
format-underline = ${self.format-background}

format-connected-background = ${colors.background}
format-connected-underline = ${self.format-connected-background}

format-warn-background = ${colors.alert}
format-warn-underline = ${self.format-warn-background}

format-disconnected-background = ${colors.alert}
format-disconnected-underline = ${self.format-disconnected-background}

format-padding = 1

[global/wm]
margin-top = 5
margin-bottom = 5
