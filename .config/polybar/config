; bar/example {{{

[bar/example]

monitor = ${env:MONITOR:}

width = 99%
height = 3%
offset-x = 0
offset-y = 0

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2

padding-left = 0
padding-right = 0
module-margin-left = 1
module-margin-right = 0

font-0 = FiraCode Nerd Font:style=Regular:size=12;0

modules-left = bspwm
; modules-right = volume bluetooth ethernet time date
modules-right = volume backlight battery ethernet wifi time date

; needed to hide polybar on video fullscreen
wm-restack = bspwm

; needed to use polybar-msg
enable-ipc = true

; }}}

; module/bspwm {{{

[module/bspwm]

type = internal/bspwm

enable-click = false
enable-scroll = false

label-empty = %name%
label-empty-underline = ${colors.background}
label-empty-padding = 1

label-occupied = %name%
label-occupied-underline= ${colors.background2}
label-occupied-padding = 1

label-focused = %name%
label-focused-underline= ${colors.color7}
label-focused-padding = 1

label-urgent = %name%
label-urgent-underline = ${colors.color1}
label-urgent-padding = 1

; }}}

; module/volume{{{

[module/volume]
type = custom/ipc
hook-0 = volume
initial = 1
format-underline = ${colors.color3}

; }}}

; module/backlight {{{

[module/backlight]
type = internal/backlight
card = intel_backlight
format-underline = ${colors.color4}

; }}}

; module/battery {{{

[module/battery]

type = internal/battery
battery = BAT0
adapter = AC
full-at = 100

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = ${colors.color4}

format-charging = <ramp-capacity> <label-charging>
format-charging-underline = ${colors.color4}
label-charging =  %percentage%%

ramp-capacity-0 = " "
ramp-capacity-1 = " "
ramp-capacity-2 = " "
ramp-capacity-3 = " "
ramp-capacity-4 = " "

format-full = <label-full>
label-full = "  %percentage%%"
format-full-underline = ${colors.color4}

; }}}

; module/bluetooth {{{

[module/bluetooth]
type = custom/script
exec = btconnected
format-underline = ${colors.color3}
interval = 1
tail = false

; }}}

; module/time {{{

[module/time]
type = internal/date
interval = 5
format-underline = ${colors.color14}
label = %time%
time = "  %H:%M "

; }}}

; module/date {{{

[module/date]
type = internal/date
interval = 5
format-underline = ${colors.color13}
label = %date%
date = "  %a, %b %d "

; }}}

