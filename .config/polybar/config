; bar/example {{{

[bar/example]

monitor = ${env:MONITOR:}

width = 99%
height = 3%
offset-x = 10
offset-y = 10

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2

padding-left = 1
padding-right = 1
module-margin-left = 1
module-margin-right = 1

font-0 = FiraMono Nerd Font:style=Regular:size=10;0

modules-left = bspwm
modules-right = pulseaudio backlight battery bluetooth ethernet wifi time date

; needed to hide polybar on video fullscreen
wm-restack = bspwm

; }}}

; module/bspwm {{{

[module/bspwm]

type = internal/bspwm

label-empty = %name%
label-empty-underline = ${colors.background}
label-empty-padding = 1

label-occupied = %name%
label-occupied-underline= ${colors.background2}
label-occupied-padding = 1

label-focused = %name%
label-focused-underline= ${colors.color7}
label-focused-padding = 1

label-urgent = %name%
label-urgent-underline = ${colors.color1}
label-urgent-padding = 1

; }}}

; module/pulseaudio {{{

[module/pulseaudio]

type = internal/pulseaudio

format-volume = <label-volume> <bar-volume>
format-volume-underline = ${colors.color6}
label-volume =   %percentage%%

format-muted = <label-muted> <bar-volume>
format-muted-underline = ${colors.color8}
format-muted-foreground = ${colors.color8}
label-muted =   %percentage%%

bar-volume-width = 10
bar-volume-foreground-0 = ${colors.color6}
bar-volume-foreground-1 = ${colors.color6}
bar-volume-foreground-2 = ${colors.color6}
bar-volume-foreground-3 = ${colors.color6}
bar-volume-foreground-4 = ${colors.color6}
bar-volume-foreground-5 = ${colors.color6}
bar-volume-foreground-6 = ${colors.color1}
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2

; }}}

; module/backlight {{{

[module/backlight]

type = internal/backlight
card = intel_backlight

; TODO: implement
; exec-if = [ "$MONITOR" = 'eDP-1' ]

format = <label> <bar>
format-underline = ${colors.color5}
