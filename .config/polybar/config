bar-width = 10
bar-indicator = |
bar-indicator-font = 1
bar-indicator-foreground = ${colors.foreground}
bar-fill = ─
bar-fill-font = 1
bar-fill-foreground = ${colors.color5}
bar-empty = ─
bar-empty-font = 1
bar-empty-foreground = ${colors.foreground}

; }}}

; module/battery {{{

[module/battery]

type = internal/battery
battery = BAT0
adapter = AC
full-at = 100

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = ${colors.color4}

format-charging = <ramp-capacity> <label-charging>
format-charging-underline = ${colors.color4}
label-charging =  %percentage%%

ramp-capacity-0 = " "
ramp-capacity-1 = " "
ramp-capacity-2 = " "
ramp-capacity-3 = " "
ramp-capacity-4 = " "

format-full = <label-full>
label-full = "  %percentage%%"
format-full-underline = ${colors.color4}

; }}}

; module/bluetooth {{{

[module/bluetooth]
type = custom/script
exec = btstatus
format-underline = ${colors.color3}
interval = 1
tail = true

; }}}

; module/ethernet {{{

[module/ethernet]
type = internal/network
interface = enp1s0

format-connected = "  "
format-connected-underline = ${colors.color2}

format-disconnected = "  "
format-disconnected-underline = ${colors.color1}

; }}}

; module/wifi {{{

[module/wifi]

type = internal/network
interface = wlp2s0

format-connected = 直  <label-connected>
label-connected = %essid%
format-connected-underline = ${colors.color2}

format-disconnected = " 睊  "
format-disconnected-underline = ${colors.color1}

; }}}

; module/time {{{

[module/time]

type = internal/date
interval = 5

format-underline = ${colors.color14}

label = %time%
time =   %I:%M %p

; }}}

; module/date {{{

[module/date]

type = internal/date
interval = 5

format-underline = ${colors.color13}

label = %date%
date =   %a, %b %d

; }}}

