" vim: filetype=vim :set foldmethod=marker:

" settings {{{

set number relativenumber
set dotfiles
set vicmd=nvim
set dotdirs=''

set syscalls
set trash
set history=100
set nofollowlinks
set sortnumbers
set undolevels=100
set timefmt=%m/%d\ %H:%M
set wildmenu
set wildstyle=popup
set suggestoptions=normal,visual,view,otherpane,keys,marks,registers
set ignorecase smartcase
set nohlsearch incsearch
set scrolloff=4

if !has('win')
	set slowfs=curlftpfs
endif

" }}}

" file-open {{{

" pdf
filextype *.pdf zathura %c %i &
fileviewer *.pdf pdftotext -nopgbrk %c -

" web
filextype *.html,*.htm firefox %f &

" images/gifs
filextype *.bmp,*.jpg,*.jpeg,*.png,*.gif,*.xpm
	\ {View in sxiv}
	\ sxiv %f,
fileviewer *.bmp,*.jpg,*.jpeg,*.png,*.xpm
	\ vifmimg draw %px %py %pw %ph %c
	\ %pc
	\ vifmimg clear
fileviewer *.gif
	\ vifmimg gifpreview %px %py %pw %ph %c
	\ %pc
	\ vifmimg clear

" video
filextype *.webm,*.mkv,*.mp4
	\ {View in ffplay}
	\ ffplay %f,

" }}}

" mappings {{{

" toggle preview
nnoremap w :view<cr>
vnoremap w :view<cr>gv

" faster renaming
nnoremap I cw<c-a>
nnoremap cc cw<c-u>
nnoremap A cw

" easier exit command
" on exit, print directory to file
command here :execute "!echo %d > $XDG_CONFIG_HOME/vifm/lastdir" | quit
nnoremap q :here<cr>

" }}}

" bookmarks {{{

nnoremap gh  :cd $HOME<cr>

nnoremap gco :cd $XDG_CONFIG_HOME<cr>
nnoremap gca :cd $XDG_CACHE_HOME<cr>
nnoremap gda :cd $XDG_DATA_HOME<cr>

nnoremap gdt :cd $XDG_DOTFILES_DIR<cr>
nnoremap gls :cd $XDG_SRC_DIR<cr>
nnoremap glb :cd $XDG_BIN_DIR<cr>

nnoremap gdc :cd $XDG_DOCUMENTS_DIR<cr>
nnoremap gdw :cd $XDG_DOWNLOADS_DIR<cr>
nnoremap gm  :cd $XDG_MUSIC_DIR<cr>
nnoremap gpc :cd $XDG_PICTURES_DIR<cr>

nnoremap gpr :cd $XDG_PROJECTS_DIR<cr>
nnoremap gpe :cd $XDG_PROJECTS_DIR/project-euler<cr>
nnoremap gpp :cd $XDG_PROJECTS_DIR/petasoft<cr>

nnoremap g12 :cd ~/asu/cse412<cr>
nnoremap g50 :cd ~/asu/cse450<cr>
nnoremap g66 :cd ~/asu/cse466<cr>
nnoremap g68 :cd ~/asu/cse468<cr>
nnoremap g85 :cd ~/asu/cse485<cr>

" }}}

