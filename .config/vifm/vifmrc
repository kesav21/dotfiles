" vim: filetype=vim :set foldmethod=marker:


source ~/.config/vifm/vifm_bookmarks


" settings {{{

" show line numbers
set number relativenumber
" show hidden files
set dotfiles
" editor
set vicmd=nvim
" don't show ../
set dotdirs=''

" }}}

" settings/default {{{

set syscalls
set trash
set history=100
set nofollowlinks
set sortnumbers
set undolevels=100
set timefmt=%m/%d\ %H:%M
set wildmenu
set wildstyle=popup
set suggestoptions=normal,visual,view,otherpane,keys,marks,registers
set ignorecase smartcase
set nohlsearch incsearch
set scrolloff=4

if !has('win')
	set slowfs=curlftpfs
endif

" }}}

" bookmarks {{{

mark b ~/bin/
mark h ~/

" }}}

" file-open {{{

" pdf
filextype *.pdf zathura %c %i &
fileviewer *.pdf pdftotext -nopgbrk %c -

" web
filextype *.html,*.htm firefox %f &

" images
filextype *.bmp,*.jpg,*.jpeg,*.png,*.gif,*.xpm
	\ {View in sxiv}
	\ sxiv %f,

fileviewer *.bmp,*.jpg,*.jpeg,*.png,*.xpm
	\ vifmimg draw %px %py %pw %ph %c
	\ %pc
	\ vifmimg clear
fileviewer *.gif
	\ vifmimg gifpreview %px %py %pw %ph %c
	\ %pc
	\ vifmimg clear

" }}}

" mappings {{{

" Toggle visibility of preview window
nnoremap w :view<cr>
vnoremap w :view<cr>gv

" Mappings for faster renaming
nnoremap I cw<c-a>
nnoremap cc cw<c-u>
nnoremap A cw

" easier exit command
" on exit, print directory to file
command Q :execute "!echo %d > $XDG_CONFIG_HOME/vifm/lastdir" | quit
nnoremap Q :Q<cr>

" }}}

