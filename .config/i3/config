
# documentation: https://i3wm.org/docs/userguide.html

## constants

set $mod Mod1

# 1 - terminal 1
# 2 - terminal 2
# 3 - browser 1
# 4 - browser 2
# 5 - music
# 6 - whatever

set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6

set $gap 10
set $dgap 10

set $wallpaper "`cat ~/.wallpaper`"

## misc

font pango:FiraMono-Regular 10
floating_modifier $mod

## key bindings

### i3 commands

bindsym $mod+Shift+r restart
bindsym $mod+Shift+q kill

### window commands
# I rarely use these
# bindsym $mod+f fullscreen toggle
# bindsym $mod+e layout toggle split

### change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

### move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

### resize window
bindsym $mod+y exec --no-startup-id ~/.scripts/i3cmds/i3resize left
bindsym $mod+u exec --no-startup-id ~/.scripts/i3cmds/i3resize down
bindsym $mod+i exec --no-startup-id ~/.scripts/i3cmds/i3resize up
bindsym $mod+o exec --no-startup-id ~/.scripts/i3cmds/i3resize right

### edit gaps
bindsym $mod+z gaps left current plus $dgap
bindsym $mod+x gaps bottom current plus $dgap
bindsym $mod+c gaps top current plus $dgap
bindsym $mod+v gaps right current plus $dgap

### move window on screen
bindsym $mod+Shift+z gaps left current minus $dgap; gaps right current plus $dgap
bindsym $mod+Shift+x gaps bottom current minus $dgap; gaps top current plus $dgap
bindsym $mod+Shift+c gaps top current minus $dgap; gaps bottom current plus $dgap
bindsym $mod+Shift+v gaps right current minus $dgap; gaps left current plus $dgap

### default gaps
bindsym $mod+Shift+a gaps inner current set $gap; gaps outer current set $gap

### applications

bindsym $mod+Return exec st
bindsym $mod+r exec st -e ranger
bindsym $mod+m exec st -e ncmpcpp
bindsym $mod+g exec google-chrome
bindsym $mod+d exec rofi -show run -theme "~/.config/rofi/nord"
bindsym $mod+Shift+d exec rofi -show window -theme "~/.config/rofi/nord"

### gestures
bindsym $mod+Tab workspace --no-auto-back-and-forth next
bindsym $mod+Shift+Tab workspace --no-auto-back-and-forth prev

### switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6

### move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6

### pulseaudio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume `~/.scripts/audio/get_running_sink` +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume `~/.scripts/audio/get_running_sink` -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute `~/.scripts/audio/get_running_sink` toggle

### media player controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

### screen brightness controls
bindsym XF86MonBrightnessUp exec ~/.scripts/chbright 0.1
bindsym XF86MonBrightnessDown exec ~/.scripts/chbright -0.1

## theming

# set colors from Xresources
set_from_resource $bg URxvt.background #f0f0f0
set_from_resource $fg URxvt.foreground #f0f0f0
set_from_resource $focus URxvt.color4 #f0f0f0
set_from_resource $urgent URxvt.color1 #f0f0f0

# class                 border  backgr. text    indicator child_border
client.focused          $focus     $focus     $focus     $focus       $focus
client.focused_inactive $bg     $bg     $bg     $bg       $bg
client.unfocused        $bg     $bg     $bg     $bg       $bg
client.urgent           $urgent     $urgent     $urgent     $urgent       $urgent
client.placeholder      $bg     $bg     $bg     $bg       $bg

client.background       $bg

for_window [class="^.*"] border pixel 1

# startup applications

# gnome stuff
# exec --no-startup-id gnome-settings-daemon
# exec --no-startup-id nm-applet
# exec --no-startup-id gnome-sound-applet
# activate gestures - doesn't do anything
# exec fusuma
exec_always feh --bg-scale $wallpaper
exec_always --no-startup-id ~/.config/i3/polybar.sh &
exec_always compton

# set gaps
gaps inner $gap
gaps outer $gap
gaps horizontal $gap
gaps vertical $gap
gaps top $gap
gaps right $gap
gaps bottom $gap
gaps left $gap

