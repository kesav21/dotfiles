
# i3 config


## documentation: https://i3wm.org/docs/userguide.html


## constants

set $mod Mod1

# 1 - terminal 1
# 2 - terminal 2
# 3 - browser 1
# 4 - browser 2
# 5 - music
# 6 - whatever

set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6

set $gap 2
set $dgap 20

set $wallpaper "`cat ~/.wallpaper`"


## misc


### font

# font-0 = "Fira Mono:style=Regular:size=12;3"
# font-0 = "Fira Code Retina:style=Regular:size=12;3"
# font-0 = "Fira Mono for Powerline:style=Regular:size=12;3"
# font pango:FiraCode-Retina 10
font pango:Fira Mono Regular 10

floating_modifier $mod


### gaps

gaps inner $gap
gaps outer $gap
gaps horizontal $gap
gaps vertical $gap
gaps top $gap
gaps right $gap
gaps bottom $gap
gaps left $gap


### theming

# set colors from Xresources
set_from_resource $bg URxvt.background #f0f0f0
set_from_resource $fg URxvt.foreground #f0f0f0
set_from_resource $focus URxvt.color4 #f0f0f0
set_from_resource $urgent URxvt.color1 #f0f0f0

# class                 border  backgr. text    indicator child_border
client.focused          $focus     $focus     $focus     $focus       $focus
client.focused_inactive $bg     $bg     $bg     $bg       $bg
client.unfocused        $bg     $bg     $bg     $bg       $bg
client.urgent           $urgent     $urgent     $urgent     $urgent       $urgent
client.placeholder      $bg     $bg     $bg     $bg       $bg

client.background       $bg

for_window [class="^.*"] border pixel 5


## startup applications

exec_always --no-startup-id ~/.bin/poly_launch
exec_always --no-startup-id compton

### wallpaper

exec_always --no-startup-id hsetroot -solid "#2e3440"
# exec_always feh --bg-scale $wallpaper

### battery low/full notifications

exec --no-startup-id ~/.bin/batt_notifier

### screensaver

exec --no-startup-id ~/.bin/screensaver_set

### notification daemon
# figure out original daemon name
# exec killall -q <notification daemon>
exec --no-startup-id dunst


## key bindings


### applications

bindsym $mod+Return exec st
bindsym $mod+g exec google-chrome
bindsym $mod+d exec --no-startup-id ~/.bin/mydmenu_run
# bindsym $mod+r exec st -e ranger
# bindsym $mod+m exec st -e ncmpcpp


### general commands

bindsym $mod+q kill
bindsym $mod+w exec ~/.bin/i3_lockcolor
bindsym $mod+r restart

### window commands
# I rarely use these
bindsym $mod+f fullscreen toggle
# bindsym $mod+e layout toggle split

### change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

### move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

### resize window
bindsym $mod+y exec --no-startup-id ~/.bin/i3_resize left
bindsym $mod+u exec --no-startup-id ~/.bin/i3_resize down
bindsym $mod+i exec --no-startup-id ~/.bin/i3_resize up
bindsym $mod+o exec --no-startup-id ~/.bin/i3_resize right

### edit gaps
# bindsym $mod+z gaps left current plus $dgap
# bindsym $mod+x gaps bottom current plus $dgap
# bindsym $mod+c gaps top current plus $dgap
# bindsym $mod+v gaps right current plus $dgap

### move window on screen
# bindsym $mod+Shift+z gaps left current minus $dgap; gaps right current plus $dgap
# bindsym $mod+Shift+x gaps bottom current minus $dgap; gaps top current plus $dgap
# bindsym $mod+Shift+c gaps top current minus $dgap; gaps bottom current plus $dgap
# bindsym $mod+Shift+v gaps right current minus $dgap; gaps left current plus $dgap

### default gaps
# bindsym $mod+Shift+a gaps inner current set $gap; gaps outer current set $gap

### switch workspace
# bindsym $mod+Tab workspace next
# bindsym $mod+Shift+Tab workspace prev
bindsym $mod+n workspace prev
bindsym $mod+m workspace next

### switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6

### move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6

### pulseaudio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle

### media player controls
bindsym XF86AudioPlay exec --no-startup-id playerctl play
bindsym XF86AudioPause exec --no-startup-id playerctl pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

### screen brightness controls
bindsym XF86MonBrightnessUp exec --no-startup-id ~/Projects/external/brightlight/brightlight -i 150
bindsym XF86MonBrightnessDown exec --no-startup-id ~/Projects/external/brightlight/brightlight -d 150


