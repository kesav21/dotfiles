#!/bin/sh

if [ "$1" = prev ]; then
	current="$(bspc query --nodes --node focused)"
	if [ -n "$current" ]; then
		node="$(bspc query --nodes --desktop .active --node .!floating |
			tac |
			awk -v current="$current" '$0 ~ current {if (getline == 1) print $0}')"
		if [ -n "$node" ]; then
			bspc node --focus "$node"
		else
			bspc monitor --focus west
		fi
	else
		bspc monitor --focus west
	fi
elif [ "$1" = next ]; then
	current="$(bspc query --nodes --node focused)"
	if [ -n "$current" ]; then
		node="$(bspc query --nodes --desktop .active --node .!floating |
			awk -v current="$current" '$0 ~ current {if (getline == 1) print $0}')"
		if [ -n "$node" ]; then
			bspc node --focus "$node"
		else
			bspc monitor --focus east
		fi
	else
		bspc monitor --focus east
	fi
fi
