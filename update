#!/bin/bash

DIR=~/.local/dotfiles

declare -a StringArray=( \

	.bash_aliases \
	.bashrc \
	.bash_profile \
	.bt_devices \
	.ff_profiles \
	.gitconfig \
	.inputrc \
	# .tmux.conf \
	# .wallpaper \
	.xinitrc \
	# .Xresources \
	.Xmodmap \
	.Xmodmap.default \

	.config/bmfiles \
	.config/bmdirs \

	.config/dunst/dunstrc \

	# .config/i3/config \
	# .config/i3/polybar.sh \

	# .config/mutt/colors.muttrc \
	# .config/mutt/muttrc \

	.config/nvim/init.vim \
	# .config/nvim/after/ftplugin/python.vim \
	# .config/nvim/after/ftplugin/json.vim \
	# .config/nvim/after/ftplugin/markdown.vim \

	# .config/polybar/config \

	# .config/vifm/vifmrc \
	# .config/vifm/scripts/vifmimg \

	.config/zathura/zathurarc \

	.fonts/FiraMono-Regular.ttf \

)

for val in ${StringArray[@]}
do
	rm ~/$val
	ln -sv $DIR/$val ~/$val
done

