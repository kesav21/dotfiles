#!/bin/bash

DIR=~/.local/dotfiles

declare -a StringArray=( \

	.zshenv \

	.config/dunst/dunstrc \

	.config/git/config \

	.config/nvim/init.vim \
	.config/nvim/after/ftplugin/json.vim \

	.config/scripts/bmfiles \
	.config/scripts/bmdirs \
	.config/scripts/bt_devices \
	.config/scripts/ff_profiles \

	.config/shell/aliases \
	.config/shell/profile \

	.config/vifm/vifmrc \
	.config/vifm/scripts/vifmimg \

	.config/X11/xinitrc \
	.config/X11/xmodmaprc \
	.config/X11/xmodmaprc.default \

	.config/zathura/zathurarc \

	.config/zsh/.zshrc \
	.config/zsh/.zprofile \

	.local/share/fonts/FiraMono-Regular.ttf \

)

for val in ${StringArray[@]}
do
	rm ~/$val
	ln -sv $DIR/$val ~/$val
done

